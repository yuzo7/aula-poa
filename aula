namespace aula
{
    class jogador : Program
    {
        string nome;
        int idade;
        int drible;
        int velocidade;
        int chute;
        int forca;

        public void correr()
        {
            int aceleraçao = força + velocidade;
        }

        public int chutar()
        {
            int potencia +forca * chute;
            return potenciachute;
        }

        public void tocar()
        {
            double toque 1 / 3 chute + 1 / 3 força;
        }

        public void interceptor()
        {
            double potenciacarrinho velocidade*2 + 1/2 força;
        }

        public void driblar()
        {
            int eficienciadrible drible + (velocidade) * 2;
        }

    }
}
